<main>
    <div class="basket">
        <div class="basket-module">
            <a href='/'>HOME</a>
            <label for="promo-code">Enter a promotional code</label>
            <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
            <button class="promo-code-cta">Apply</button>
        </div>
        <div class="basket-labels">
            <ul>
                <li class="item item-heading">Item</li>
                <li class="price">Price</li>
                <li class="quantity">Quantity</li>
                <li class="subtotal">Subtotal</li>
            </ul>
        </div>
        <div class="basket-product">
            <div class="item">
                <div class="product-image">
                    <img src="http://placehold.it/120x166" alt="Placholder Image 2" class="product-frame">
                </div>
                <div class="product-details">
                    <h1>
                        <strong>
                            <span class="item-quantity">5</span> x</strong> Lace Sleeve Cuff Dress</h1>
                    <p>Product Code: <span>4563456</span></p>
                </div>
            </div>
            <div class="price">26.00</div>
            <div class="quantity">
                <input type="number" value="5" min="1" class="quantity-field">
                 <button class="updateQuantityBtn" data-cartItem="1" type="submit">Update</button>
            </div>
            <div class="subtotal"></div>
            <div class="remove">
                <button>Remove</button>
            </div>
        </div>
        {{#each items}}
        <div class="basket-product">
            <div class="item">
                <div class="product-image">
                    <img src="/img/{{this.Product.dataValues.image}}" alt="Placholder Image 2" class="product-frame">
                </div>
                <div class="product-details">
                    <h1>
                        <strong>
                            <span class="item-quantity">{{this.quantity}}</span> x</strong> {{this.Product.dataValues.name}}</h1>
                    <p>Checkout Code: <span>{{this.id}}</span></p>
                </div>
            </div>
            <div class="price">{{this.Product.dataValues.price}}</div>
            <div class="quantity">
                <input type="number" value="{{this.quantity}}" min="1" class="quantity-field">
                <button class="updateQuantityBtn" data-cartitem="{{this.id}}" type="submit">Update</button>
            </div>
            <div class="subtotal"></div>
            <div class="remove">
                <button>Remove</button>
            </div>
        </div>
        {{/each}}
    </div>
    <aside>
        <div class="summary">
            <div class="summary-total-items">
                <span class="total-items"></span> Items in your Bag</div>
            <div class="summary-total">
                <div class="total-title">Total</div>
                <div class="total-value final-value" id="basket-total">130.00</div>
            </div>
            <form action="/stripe-post" method="POST">
                <script id="cart-form" src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_TWkMSIUvATWhLhvIxi8UMBwB"
                    data-amount="999" data-name="Range Front Inc." data-description="Widget" data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                    data-locale="auto">
                    </script>
            </form>
        </div>
    </aside>
</main>